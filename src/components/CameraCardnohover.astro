---
const { src, headline, bodytext } = Astro.props;
import Circle from "../img/circleelement.webp";
---

<section class="camera-section">
  <div class="img-text-container">
    <div class="img-container">
      <img src={src} alt="Camera" class="Camimg" />
      <img src={Circle.src} alt="Circle element" class="Circle" />
    </div>
    <div class="text-container">
      <h2>{headline}</h2>
      <p>{bodytext}</p>
    </div>
  </div>
</section>

<style>
  .camera-section {
    background-color: #ffffff;
    border-radius: 10px;
    padding: 2rem;
    margin: 20px 0px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: visible;
  }

  .img-text-container {
    display: flex;
    align-items: center;
    position: relative;
  }

  .img-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 20px;
  }

  .Camimg {
    width: auto;
    max-width: 300px;
    height: auto;
    position: relative;
    z-index: 2;
    margin-left: 10px;
    right: 25%;
    bottom: 5%;
  }

  .Circle {
    position: absolute;
    width: 250px;
    height: auto;
    bottom: -20px;
    left: -110px;
    z-index: 1;
  }
  .text-container {
    padding: 20px 10px;
  }

  .text-container h2 {
    margin-top: 0;
  }

  @media (max-width: 1000px) {
    .img-text-container {
      flex-direction: column;
    }
    .img-container {
      margin-top: 30px;
      margin-left: 50px;
      order: -1;
    }
    .Camimg {
      margin: auto;
      right: 0;
    }
    .Circle {
      left: -5%;
    }

    .text-container h2 {
      margin-top: 20px;
    }
    .camera-section {
      padding: 20px;
    }
  }
</style>
