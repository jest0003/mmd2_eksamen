---
const { src, img, headline, bodytext, hoverSrc } = Astro.props;
import Circle from "../img/circleelement.webp";
---

<section class="camera-section">
  <div class="img-text-container">
    <div class="img-container">
      <img src={src} alt="Camera" class="Camimg" />
      <img src={hoverSrc} alt="Camera Hover" class="hover-img" />
      <img src={Circle.src} alt="Circle element" class="Circle" />
    </div>
    <div class="text-container">
      <h2>{headline}</h2>
      <p>{bodytext}</p>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const imgContainers = document.querySelectorAll(".img-container");

    imgContainers.forEach((container) => {
      container.addEventListener("touchstart", function (e) {
        const hoverImg = this.querySelector(".hover-img");
        if (hoverImg) {
          hoverImg.style.opacity = "1";
        }
      });

      container.addEventListener("touchmove", function (e) {
        const hoverImg = this.querySelector(".hover-img");
        if (hoverImg) {
          hoverImg.style.opacity = "1";
        }
      });

      container.addEventListener("touchend", function (e) {
        const hoverImg = this.querySelector(".hover-img");
        if (hoverImg) {
          hoverImg.style.opacity = "0";
        }
      });
    });
  });
</script>

<style>
  section {
    max-width: 1300px;
  }

  .camera-section {
    margin-bottom: 3rem;
    overflow: visible;
  }

  .img-text-container {
    background-color: #ffffff;
    border-radius: 10px;
    padding: 2rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    position: relative;
  }

  .img-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 20px;
  }

  .Camimg {
    width: auto;
    max-width: 300px;
    height: auto;
    position: relative;
    z-index: 2;
    margin-left: 10px;
    right: 22%;
    bottom: 5%;
  }

  .hover-img {
    position: absolute;
    width: auto;
    max-width: 300px;
    height: auto;
    z-index: 3;
    opacity: 0;
    transition: opacity 0.3s ease;
    margin-left: 10px;
    right: 22%;
    bottom: 0%;
    pointer-events: none;
  }

  .img-text-container:hover .hover-img {
    opacity: 1;
  }

  .Circle {
    position: absolute;
    width: 250px;
    height: auto;
    bottom: -20px;
    left: -110px;
    z-index: 1;
  }
  .text-container {
    padding: 20px 10px;
  }

  .text-container h2 {
    margin-top: 0;
  }

  @media (max-width: 1000px) {
    .img-text-container {
      flex-direction: column;
      padding: 20px;
    }
    .img-container {
      margin-top: 30px;
      margin-bottom: 20px;
      margin-left: 50px;
      order: -1;
    }
    .Camimg,
    .hover-img {
      margin: auto;
      right: 0;
      width: 100%;
      max-width: 300px;
      max-height: 300px;
    }
    .Circle {
      bottom: auto;
      left: -5%;
      max-width: 100%;
    }

    .text-container h2 {
      margin-top: 20px;
    }
  }
</style>
